 {{#each article}}
<div class="row">
  <div class="col s12">

    <div class="card horizontal" data-id={{_id}}>
      <div class="card-stacked">
        <div class="card-content">
          <a href="/article/{{_id}}"><h2>{{title}}</h2></a>
        </div>
        <div class="card-action">
          <a href={{link}}>{{link}}</a>
          <button data-target="modal1" class="btn modal-trigger" data-id={{_id}}>Notes</button>
          <button class="btn removeSave" data-id={{_id}} href="/remove">Remove</button>
        </div>
      </div>
    </div>
  </div>
</div>

{{/each}}

<div id="modal1" class="modal">
  <div class="modal-content">
    <h4>Modal Header</h4>
    <p>A bunch of text</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
  </div>
</div>